// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  full_name String
  email     String    @unique
  phone     String    @unique
  password  String
  register  String
  contact   Contact[]

  @@map("users")
}

model Contact {
  id        String @id
  full_name String
  nickname  String
  email     String 
  phone     String 
  country   String
  added     String
  user      User   @relation(fields: [user_id], references: [id])
  user_id   String

  @@map("contacts")
}
